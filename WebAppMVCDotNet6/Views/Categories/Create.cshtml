@model BookProject.Models.Models.Category
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
            @* @Html.ValidationMessageFor(m=>m.Name,"Name cannot be more than 20 characters")*@

        </div>
         <div class="mb-3">
            <label asp-for="DisplayOrder"></label> 
            <input asp-for="DisplayOrder" class="form-control" />
         </div>
         <div class="mb-3">
            <label asp-for="CreateDateTime"></label> 
            <input asp-for="CreateDateTime" class="form-control" />
         </div>
         <button type="submit" class="btn btn-primary" style="width:100px">Create</button>
         <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">Back</a>

    </div>
</form>

  @section Scripts {
      <partial name="_ValidationScriptsPartial.cshtml"/>
  }