@model BookProject.Models.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>
        
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            
            @* @Html.ValidationMessageFor(m=>m.Name,"Name cannot be more than 20 characters")*@

        </div>
         <div class="mb-3">
            <label asp-for="DisplayOrder"></label> 
            <input asp-for="DisplayOrder" disabled class="form-control"  />
         </div>
         <div class="mb-3">
            <label asp-for="CreateDateTime"></label> 
            <input asp-for="CreateDateTime" disabled class="form-control"  />
         </div>
         <button type="submit" class="btn btn-primary" style="width:130px">Delete</button>
         <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">Back</a>

    </div>
</form>

