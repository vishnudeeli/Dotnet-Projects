@model IEnumerable<BookProject.Models.Models.Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_AlertPartial" />
<div class="container p-3">
    <div class="row pt-4">
        
        
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Create</a>
        </div>
       
        
    </div>
</div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th>
            Date
        </th>
        <th>
            Edit
        </th>
       <th>
           Delete
       </th>
     
        

    </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
                <tr>
                    <td><a asp-controller="Categories" asp-action="Details" asp-route-id="@c.Id">@c.Name</a></td>
                    <td>@c.DisplayOrder</td>
                    <td>@c.CreateDateTime</td>
                    
                        <div class="btn-group m-75" role="group">
                                <td><a asp-controller="Categories" asp-action="Edit" asp-route-id="@c.Id" class=" btn btn-primary"><i class="bi bi-pencil"></i>Edit</a></td>
                                <td> <a asp-controller="Categories" asp-action="Delete" asp-route-id="@c.Id" class=" btn btn-primary"><i class="bi bi-trash3"></i>Delete</a></td>
                        </div>
                        
                 </tr>
                
        }
    </tbody>
</table>
